{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es6", "ESNext", "dom"],
    "types": ["vite/client"],
    "typeRoots": ["node_modules/@types", "./types", "./src/router/types.ts"],
    "paths": {
      "@/*": ["src/*"],
      "/@/*": ["src/*"],
      "@build/*": ["build/*"],
      "@static/*": ["public/static/*"],
      "/#/*": ["types/*"]
    },
    "noImplicitAny": false, //不允许使用any
    "strictNullChecks": false, //不允许使用null
    "noImplicitThis": false, //不允许往this上面挂属性
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*"
  ],
  "exclude": ["node_modules/**","node_modules/vue-tianditu/packages/mousetool/use/init.ts", "dist", "**/*.js"],
}
